<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#081738"
    android:orientation="vertical"
    android:paddingTop="30dp"
    tools:context=".Patient_Singin">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/white_doc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edt_email"
            android:layout_width="342dp"
            android:backgroundTint="#fff"
            android:foregroundTint="#fff"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Email:"
            android:inputType="textEmailAddress"
            android:shadowColor="@android:color/transparent"
            android:textColorHint="@android:color/white" />

        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:id="@+id/simplePassword"
            android:layout_gravity="center"
            android:hint="Password"
            android:backgroundTint="#fff"
            android:foregroundTint="#fff"
            android:textColor="#fff"
            app:tint_color="#fff"
            android:textColorHint="@android:color/white"
            />
        <Button
            android:id="@+id/btn_pat_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:background="@drawable/btn_bg"
            android:text="SignIn"
            android:textAllCaps="false"
            android:textColor="#081738"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Or Create New Account "
            android:textStyle="bold"
            android:textSize="18dp"/>
        <Button
            android:id="@+id/btn_pat_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:background="@drawable/btn_bg"
            android:text="  Create Account  "
            android:textAllCaps="false"
            android:textColor="#081738"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>